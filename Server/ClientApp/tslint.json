{
    "extends": [
        "tslint:recommended",
        "rxjs-tslint-rules"
    ],
    "rulesDirectory": [
        "codelyzer",
        "tslint-consistent-codestyle"
    ],
    "linterOptions": {
        "exclude": [
            "projects/**/*.spec.ts",
            "projects/**/e2e/**/*.*",
            "projects/**/src/test.ts"
        ]
    },
    "rules": {
        "array-type": [
            true,
            "array"
        ],
        "arrow-return-shorthand": true,
        "await-promise": true,
        "ban-types": [
            true,
            [
                "Object",
                "Use object instead."
            ]
        ],
        "class-name": true,
        "component-class-suffix": true,
        "contextual-decorator": true,
        "contextual-lifecycle": true,
        "curly": true,
        "deprecation": true,
        "early-exit": [
            true,
            {
                "max-length": 4,
                "ignore-constructor": true
            }
        ],
        "import-destructuring-spacing": true,
        "import-spacing": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": false,
        "max-line-length": [
            true,
            180
        ],
        "member-access": [
            true,
            "check-parameter-property"
        ],
        "member-ordering": [
            true,
            {
                "order": "fields-first"
            }
        ],
        "newline-before-return": true,
        "naming-convention": [
            true,
            {
                "type": "type",
                "format": "PascalCase"
            },
            {
                "type": "genericTypeParameter",
                "prefix": "T"
            },
            {
                "type": "member",
                "modifiers": "private",
                "leadingUnderscore": "require"
            }
        ],
        "no-any": true,
        "no-conditional-assignment": true,
        "no-conflicting-lifecycle": true,
        "no-consecutive-blank-lines": true,
        "no-console": {
            "severity": "warning"
        },
        "no-debugger": true,
        "no-duplicate-imports": true,
        "no-duplicate-super": true,
        "no-duplicate-switch-case": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-empty-interface": true,
        "no-eval": true,
        "no-host-metadata-property": true,
        "no-inputs-metadata-property": true,
        "no-invalid-template-strings": true,
        "no-irregular-whitespace": true,
        "no-lifecycle-call": true,
        "no-output-native": true,
        "no-output-on-prefix": true,
        "no-outputs-metadata-property": true,
        "no-parameter-reassignment": true,
        "no-pipe-impure": true,
        "no-queries-metadata-property": true,
        "no-shadowed-variable": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": true,
        "no-unnecessary-type-assertion": true,
        "no-unused-expression": true,
        "object-literal-sort-keys": false,
        "only-arrow-functions": true,
        "ordered-imports": [
            true,
            {
                "import-sources-order": "lowercase-first",
                "module-source-path": "full",
                "named-imports-order": "any"
            }
        ],
        "prefer-const": true,
        "prefer-inline-decorator": true,
        "prefer-output-readonly": true,
        "prefer-template": [
            true,
            "allow-single-concat"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "radix": true,
        "relative-url-prefix": true,
        "semicolon": true,
        "switch-default": true,
        "template-banana-in-box": true,
        "template-no-any": true,
        "template-no-call-expression": false,
        "trailing-comma": false,
        "triple-equals": true,
        "typedef": [
            true,
            "call-signature",
            "parameter",
            "arrow-parameter",
            "property-declaration",
            "member-variable-declaration",
            "object-destructuring",
            "array-destructuring"
        ],
        "use-component-selector": true,
        "use-isnan": true,
        "use-lifecycle-interface": true,
        "use-pipe-decorator": true,
        "use-pipe-transform-interface": true,
        "variable-name": {
            "options": [
                "allow-leading-underscore",
                "allow-pascal-case"
            ]
        },
        "rxjs-no-async-subscribe": {
            "severity": "error"
        },
        "rxjs-no-unsafe-takeuntil": {
            "severity": "error"
        },
        "rxjs-no-subject-unsubscribe": {
            "severity": "error"
        },
        "rxjs-no-ignored-replay-buffer": {
            "severity": "error"
        },
        "rxjs-no-create": {
            "severity": "error"
        },
        "rxjs-no-internal": {
            "severity": "error"
        },
        "rxjs-no-nested-subscribe": {
            "severity": "error"
        }
    }
}
